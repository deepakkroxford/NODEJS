<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- <link rel="stylesheet" href="stylesheets/style.css"> -->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body> hidden
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-1/4  rounded-lg  px-3 mt-2 py-2 bg-zinc-800" type="text" placeholder="Title goes"
                    name="title">
                <textarea class="block w-1/4  rounded-lg px-3 mt-2 py-2 resize-none bg-zinc-800"
                    placeholder="write your task" name="data">
                </textarea>
                <input class="mt-2 bg-blue-500 px-5 py-2 rounded-lg" type="submit" value="Create Task">
            </form>
        </div>
        <div class="tasks flex gap-3 p-10 flex-wrap">


            <% if (files.length> 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-lg">
                        <h1 class="text-white  text-3xl tracking-tighter">
                            <%=val%>
                        </h1>
                        <div class="flex justify-between item-center w-full mt-3">
                            <a class="text-blue-500 inline-block " href="/file/<%=val%>">Read more...</a>
                            <a class="text-zinc-600" href="/edit/<%=val%>">edit</a>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <h3 class="text-zinc-600">No task yet</h3>
                            <% } %>
        </div>
    </div>
    <!-- <script src="javascript/index.js"></script> -->
</body>

</html>